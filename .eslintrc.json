{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "google",
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "strict": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "no-alert": "error",
    "no-param-reassign": "off",
    "indent": ["error", 2, {"SwitchCase": 1}],
    "max-len": ["warn", 120, 2, {"ignoreComments": true}]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": true,
      "arrowFunctions": true,
      "modules": false
    }
  }
}
